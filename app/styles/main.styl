@import 'jeet'
@import 'nib'
@import '../bower_components/Hover/css/hover-min.css'

light-blue = #1c8bb7 
light-black = #454849

html, body
  height: 100%
  margin:0
  span(1)
  a
    text-decoration: none
    &:visited, &:link
      color: inherit

@-skrollr-keyframes page-frames
  bottom
    transform: translateX(100px)
  

#wrapper
  height: 100%
  font-family: 'Raleway', sans-serif
  .title-text
    color: #221f20 //dark black
  .content-text
    color: #888 //light black
  #header
    height: 100px
    span(1)
    position: fixed
    background-color: rgba(255, 255, 255, 0.95)
    z-index:10
    box-shadow: 0px 1px 10px #cccccc
    #logo
      center(960)
      text-align: center
      font-size: 40px
      color: light-blue 
    #navigater
      margin-top: 10px
      center(960)
      text-align: center
      a
        padding: 5px
        color: #221f20
        cursor: pointer
        margin: 5px
  .page
    -skrollr-animation-name: page-frames
    padding-top: 100px
    background-color: #f1f1f1
    // let height fit the contain element
    min-height: 100%
    overflow:auto
    .about_info
      font-size: 20px
      padding-top: 10%
      center(540px)
  #labmates
    -skrollr-animation-name: page-frames
    background-color: #221f20
    .title
      font-size: 30px
      color: #f1f1f1
    .mates-list
      center(960px)
      margin-top: 30px
      .mates
        col(1)
        margin-bottom: 100px
        .mate
          col(1/3)
          height: 240px
          border-radius: 5px
          background-color: #f1f1f1
          .mate-img
            span(1)
            height: 140px
            background-color: light-black
            border-radius: 3px 3px 0px 0px
          .mate-info
            padding-top: 160px
            padding-left: 20px
  #se-courses
    background-color: light-blue //blue
  #open-courses
    .courses-list
      center(960px)
      margin-top: 30px
      .course
        col(1/3)
        border-radius: 3px
        font-size: 20px
        text-align: center
        .course-name
          border-radius: 3px 3px 0px 0px
          height: 100px
          line-height: 100px
          background-color: light-blue
        .open-year
          col(1)
          background-color: white
          height: 50px
          line-height: 50px
  #about-us
    .about-contain
      center(1280px)
      .about-info
        col(1/3)
      .map
        col(2/3)

