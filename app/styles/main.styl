@import 'jeet'
@import 'nib'

light-blue = #1c8bb7 
light-black = #454849

html, body
  height: 100%
  margin:0
  span(1)
  a
    text-decoration: none


@keyframes navigate-frames {
  from{
    color: light-black
  }
  to{
    color: light-blue
    text-shadow: 0 3px 1px #cccccc
  }
}
#wrapper
  height: 100%
  font-family: 'Raleway', sans-serif
  .title-text
    color: #221f20 //dark black
  .content-text
    color: #888 //light black
  #header
    height: 80px
    span(1)
    position: fixed
    background-color: rgba(255, 255, 255, 0.95)
    z-index:10
    box-shadow: 0px 1px 10px #cccccc
    #logo
      center(960)
      text-align: center
      font-size: 40px
      color: light-blue 
    #navigater
      margin-top: 10px
      center(960)
      text-align: center
      a
        color: #221f20
        cursor: pointer
        margin: 5px
        &:hover
          animation: navigate-frames 0.3s forwards
  .page
    height: 100%
    background-color: #f1f1f1
    .about_info
      font-size: 20px
      padding-top: 10%
      center(540px)
  #labmates
    background-color: #221f20
    .mate-list
      padding-top: 200px
      center(960px)
      .mate
        col(1/3)
        height: 240px
        border-radius: 5px
        background-color: #f1f1f1
        .mate-img
          span(1)
          height: 140px
          background-color: light-black
          border-radius: 3px 3px 0px 0px
        .mate-info
          padding-top: 160px
          padding-left: 20px
  #se-courses
    background-color: light-blue //blue
  #open-courses
    .courses-list
      col(1)
      padding-top: 100px
      .course
        col(1/3)
        background-color: light-blue
