doctype html
html(ng-app='SELab')
  head
    link(rel='stylesheet', href='./styles/main.css')
    link(rel='stylesheet', href='./bower_components/animate.css/animate.min.css')
    link(href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')
  body(ng-controller='PageController')
    #wrapper
      #header
        #logo Software Engineering Lab
        #navigater
          tr
            td
              a(href='#professor' du-smooth-scroll) 指導教授
            td
              a(href='#labmates' du-smooth-scroll) 實驗室成員
            td
              a(href='#research' du-smooth-scroll) 研究計畫
            td
              a(href='#se-courses' du-smooth-scroll) 2014軟體工程實務課程
            td
              a(href='#open-courses' du-smooth-scroll) 開授課程
            td
              a(href='#about-us' du-smooth-scroll) 聯絡我們
      #professor.page
      #labmates.page
        .mate-list(data-anijs="if: scroll, on: window, do: fadeInUpBig animated, before: scrollReveal")
          .mate(ng-repeat='mate in labmates' )
            .mate-img
              img
            .mate-info 
              | Name: {{mate.name}}
              br
              | E-mail: {{mate.email}}
      #research.page
      #se-courses.page
      #open-courses.page
        .courses-list
          .course
            .course-name Software Design
          .course
            .course-name Java Software Delelopment
          .course
            .course-name Software Engineering
      #about-us(ng-controller='AboutController as aboutCtrl').page
        .about_info(data-anijs="if: scroll, on: window, do: zoomIn animated, before: scrollReveal")
          .address.title-text
            | Address: 
            .content-text {{about_info.address}}
          .email.title-text
            | Email:
            .content-text {{about_info.email}}
          .tel.title-text
            | Tel:
            .content-text {{about_info.tel}}



  script(src='./bower_components/angular/angular.min.js')
  script(src='./bower_components/angular-scroll/angular-scroll.min.js')
  script(src='./bower_components/ng-parallax/angular-parallax.min.js')
  script(src='./scripts/main.js')
  script(src='./bower_components/anijs/dist/anijs-min.js')
  script(src='./bower_components/anijs/dist/helpers/scrollreveal/anijs-helper-scrollreveal-min.js')
